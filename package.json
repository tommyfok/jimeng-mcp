{
  "name": "jimeng-image-mcp",
  "version": "0.2.2",
  "description": "MCP service for Jimeng Image Generation API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jimeng-image-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "cli": "node dist/cli.js",
    "test:local": "node test/local-test.js",
    "test:cli": "npm run cli -- --help",
    "test:build": "npm run build && echo '✅ 构建测试通过'",
    "test:api": "node test/api-integration-test.js",
    "test:concurrency": "node test/concurrency-test.js",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "prepublish": "npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "prepublish:check": "node scripts/prepare-publish.js",
    "lint": "eslint ./ --ext .ts,.tsx --fix",
    "lint:check": "eslint ./ --ext .ts,.tsx",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint:fix": "npm run lint && npm run format"
  },
  "keywords": [
    "mcp",
    "jimeng",
    "image-generation",
    "ai",
    "model-context-protocol",
    "image-ai",
    "stable-diffusion"
  ],
  "author": "TommyFok <154274174@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommyfok/jimeng-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tommyfok/jimeng-mcp/issues"
  },
  "homepage": "https://github.com/tommyfok/jimeng-mcp",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.11.0",
    "commander": "^11.1.0",
    "dotenv": "^16.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "5.3.x"
  }
}
